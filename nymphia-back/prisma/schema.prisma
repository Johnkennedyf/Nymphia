generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/nymphiadb.db"
}

model User {
  id           String      @default(uuid()) @id
  name         String?    
  description  String?
  cpf          String?    
  email        String      @unique
  password     String
  birth        DateTime?  
  phone        String?
  portfolios   Portfolio[]
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt
}

model Portfolio {
  id          String      @default(uuid()) @id
  name        String
  description String
  img         String
  user        User        @relation(fields: [user_id], references: [id])
  user_id     String
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
}